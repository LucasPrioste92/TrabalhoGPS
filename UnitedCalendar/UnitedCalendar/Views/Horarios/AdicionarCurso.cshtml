@using UnitedCalendar.ViewModels
@model AddCursoViewModel

@{
    ViewData["Title"] = "Curso";
}

<h1>Selecionar Curso</h1>

<h4>Disciplina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
        <div class="form-group">
                <label asp-for="idCurso" class="control-label"></label>
                <select asp-for="idCurso" class="form-control" asp-items="ViewBag.CursoIdCurso"></select>
                <span asp-validation-for="idCurso" class="text-danger"></span>
            </div>
        <div class="row">
            <input type="submit" value="Update" class="btn btn-danger" />
            <a asp-action="ManageUsersInRole" asp-route-id="@ViewBag.roleId" class="btn btn-primary">Voltar</a>
        </div>
</form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

