@model IEnumerable<UnitedCalendar.Models.Curso>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-info"asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Faculdade
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculdade.Nome)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.IdCurso">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdCurso">Details</a> |
                <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.IdCurso">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
